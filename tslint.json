{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "rules": {
        "interface-name": [true, "never-prefix"],
        "jsdoc-format": false,
        "quotemark": [
            true,
            "single",
            "avoid-escape"
        ],
        "variable-name": [
            true,
            "ban-keywords",
            "check-format",
            "allow-leading-underscore",
            "allow-trailing-underscore",
            "allow-pascal-case"
        ],
        "no-consecutive-blank-lines": false,
        "no-unused-variable": [
            true,
            {
                "ignore-pattern": "[$](onInit|onDestroy|onChanges|postLink|inject)"
            }
        ],
        "trailing-comma": [true, {
            "multiline": "never",
            "singleline": "never"
        }],
        "object-literal-sort-keys": false,
        "no-angle-bracket-type-assertion": false,
        "no-reference": false,
        "no-trailing-whitespace": false,
        "max-line-length": [false],
        "object-literal-shorthand": false,
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-separator",
            "check-type"
        ],
        "no-namespace": false,
        "no-console": [
            false,
            "debug",
            "info",
            "time",
            "timeEnd",
            "trace"
        ]
    },
    "rulesDirectory": ["node_modules/tslint-eslint-rules/dist/rules"]
}